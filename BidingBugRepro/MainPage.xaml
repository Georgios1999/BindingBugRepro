<Page x:Class="BidingBugRepro.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:BidingBugRepro"
      xmlns:utu="using:Uno.Toolkit.UI"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <ScrollViewer IsTabStop="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Padding="40">
        <Grid>
            <StackPanel Spacing="40" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Spacing="20">
                    <TextBlock Text="MVUX Bidning Bug" Style="{ThemeResource TitleLargeTextBlockStyle}" TextAlignment="Center" />
                    <TextBlock Text="You should see the Text on the button below say &quot;Example&quot; if there is no issue." TextAlignment="Center" />
                </StackPanel>
                <!-- This button should display "Example," which is the Value of ExampleText, found in AppModel.cs -->
                <Button Content="{Binding ExampleText.Value}" HorizontalAlignment="Center">
                    <Button.Flyout>
                        <Flyout>
                            <Grid Width="300">
                                <TextBlock Text="The button doesn't display any content, which is unexpected. You should see a BindingExpression path error in Debug that confirms things aren't working as intended." TextWrapping="WrapWholeWords" TextAlignment="Center" />
                            </Grid>
                        </Flyout>
                    </Button.Flyout>
                </Button>
            </StackPanel>
            <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal" Spacing="12">
                <Button Content="Open GitHub Issue in browser" Click="IssueLinkButton_Click" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
